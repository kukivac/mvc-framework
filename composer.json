{
  "name": "pastel-design/mvc-template",
  "description": "Pastel designs mvc template",
  "type": "framework",
  "license": "proprietary",
  "minimum-stability": "stable",
  "require": {
    "php": "8.* ",
    "intervention/image": "2.*",
    "latte/latte": "v2.*",
    "nette/forms": "v3.*",
    "ext-pdo": "*",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "ext-intl": "*",
    "guzzlehttp/guzzle": "^7.0",
    "ext-mbstring": "*"
  },
  "authors": [
    {
      "name": "Jakub Kováč",
      "email": "kukivac@gmail.com"
    },
    {
      "name": "Vojtěch Makula",
      "email": "makulvo@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "app\\": "app",
      "system\\": "system"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "jetbrains/phpstorm-attributes": "^1.0"
  },
  "scripts": {
    "cs-check": "ecs check --memory-limit=-1",
    "cs-fix": [
      "ecs check --fix --memory-limit=-1"
    ],
    "stan": [
      "phpstan --configuration=ci/phpstan.neon.dist --memory-limit=-1"
    ],"stan-baseline": [
      "phpstan --configuration=ci/phpstan.neon.dist --memory-limit=-1 --generate-baseline"
    ]
  }
}
